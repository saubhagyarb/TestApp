<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.FavoriteFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/favFragmentRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <TextView
        android:id="@+id/emptyStateLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/empty_state_icon"
        android:drawablePadding="16dp"
        android:gravity="center"
        android:text="@string/favorites_will_be_appear_here"
        android:textColor="@color/md_theme_inverseSurface"
        android:textSize="18sp"
        android:visibility="gone"
        app:drawableTint="@color/md_theme_inverseSurface"
        app:drawableTopCompat="@drawable/lightbulb"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@+id/favFragmentRecyclerView" />
</androidx.constraintlayout.widget.ConstraintLayout>